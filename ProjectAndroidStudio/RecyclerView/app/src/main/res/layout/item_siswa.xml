<!--
    Layout untuk satu item siswa di RecyclerView
    Menggunakan CardView sebagai container utama
    Menampilkan avatar (opsional), nama, dan alamat siswa
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- CardView sebagai container item siswa -->
    <!-- CardView sebagai container utama item siswa -->
    <androidx.cardview.widget.CardView
        android:id="@+id/studentCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFFFF">

        <!-- LinearLayout horizontal untuk avatar, detail siswa, dan menu opsi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- ImageView avatar siswa (opsional) -->
            <ImageView
                android:id="@+id/avatarImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="Avatar Siswa" />

            <!-- LinearLayout vertikal untuk nama dan alamat -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- TextView Nama Siswa -->
                <!-- TextView Nama Siswa -->
                <TextView
                    android:id="@+id/tvNamaSiswa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Siswa Placeholder"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF000000" />

                <!-- TextView Alamat Siswa -->
                <TextView
                    android:id="@+id/tvAlamatSiswa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat Lengkap Siswa Placeholder"
                    android:textSize="14sp"
                    android:textColor="#FF757575" />
            </LinearLayout>

            <!-- TextView titik tiga untuk menu opsi -->
            <TextView
                android:id="@+id/tv_menu_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‹®"
                android:textSize="24sp"
                android:padding="8dp"
                android:gravity="center"
                android:contentDescription="Menu Opsi" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
